{% schema %}
{
  "name": "Custom Slider",
  "settings": [
    {
      "type": "text",
      "label": "Slide 1 Header",
      "id": "slide1_header",
      "default": "Slide 1 Header"
    },
    {
      "type": "text",
      "label": "Slide 1 Subheader",
      "id": "slide1_subheader",
      "default": "Slide 1 Subheader"
    },
    {
      "type": "text",
      "label": "Slide 1 Button Text",
      "id": "slide1_button_text",
      "default": "Learn More"
    },
    {
      "type": "text",
      "label": "Slide 1 Button Link",
      "id": "slide1_button_link",
      "default": "ok"
    },
    {
      "type": "color",
      "label": "Slide 1 Button Color",
      "id": "slide1_button_color",
      "default": "#3498db"
    },
    {
      "type": "text",
      "label": "Slide 2 Header",
      "id": "slide2_header",
      "default": "Slide 2 Header"
    },
    {
      "type": "text",
      "label": "Slide 2 Subheader",
      "id": "slide2_subheader",
      "default": "Slide 2 Subheader"
    },
    {
      "type": "text",
      "label": "Slide 2 Button Text",
      "id": "slide2_button_text",
      "default": "Learn More"
    },
    {
      "type": "text",
      "label": "Slide 2 Button Link",
      "id": "slide2_button_link",
      "default": "string"
    },
    {
      "type": "color",
      "label": "Slide 2 Button Color",
      "id": "slide2_button_color",
      "default": "#e74c3c"
    }
  ],
  "presets": [
    {
      "name": "Custom Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .custom-slider {
    position: relative;
    overflow: hidden;
  }

  .slider {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .slide {
    box-sizing: border-box;
    text-align: center;
    padding: 20px;
    width: 100%;
  }
</style>

<div class="custom-slider">
  <div class="slider">
    <div class="slide">
      <h2>{{ section.settings.slide1_header }}</h2>
      <p>{{ section.settings.slide1_subheader }}</p>
      <a
        href="{{ section.settings.slide1_button_link }}"
        style="background-color: {{ section.settings.slide1_button_color }};"
      >
        {{ section.settings.slide1_button_text }}
      </a>
    </div>
    <div class="slide">
      <h2>{{ section.settings.slide2_header }}</h2>
      <p>{{ section.settings.slide2_subheader }}</p>
      <a
        href="{{ section.settings.slide2_button_link }}"
        style="background-color: {{ section.settings.slide2_button_color }};"
      >
        {{ section.settings.slide2_button_text }}
      </a>
    </div>
  </div>
  <div class="slider-arrows">
    <div class="prev">&#10094;</div>
    <div class="next">&#10095;</div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      let currentSlide = 0;
      const slides = document.querySelector('.custom-slider .slider');
      const totalSlides = slides.children.length;

      document.querySelector('.custom-slider .next').addEventListener('click', function () {
        currentSlide = (currentSlide + 1) % totalSlides;
        updateSlider();
      });

      document.querySelector('.custom-slider .prev').addEventListener('click', function () {
        currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
        updateSlider();
      });

      function updateSlider() {
        slides.style.transform = `translateX(-${currentSlide * 100}%)`;
      }
    });
  </script>
</div>
