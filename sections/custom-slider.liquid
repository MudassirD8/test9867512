<!-- sections/custom-slider.liquid -->

{% schema %}
{
  "name": "Custom Slider",
  "settings": [
    {
      "type": "text",
      "label": "Slider Header",
      "id": "slider_header",
      "default": "Custom Slider"
    },
    {
      "type": "textarea",
      "label": "Slider Blocks",
      "id": "slider_blocks",
      "default": "[]",
      "info": "Enter JSON array for each slider block. Example: [{\"header\":\"Block 1\",\"subheader\":\"Subtitle 1\",\"button_text\":\"Learn More\",\"button_color\":\"#3498db\"},{\"header\":\"Block 2\",\"subheader\":\"Subtitle 2\",\"button_text\":\"Discover\",\"button_color\":\"#e74c3c\"}]"
    }
  ]
}
{% endschema %}

<div class="custom-slider">
  <h2>{{ section.settings.slider_header }}</h2>
  <div class="slider-container">
    {% assign blocks = section.settings.slider_blocks | json %}
    {% if blocks.size > 0 %}
      {% for block in blocks %}
        <div class="slider-block" style="background-color: {{ block.button_color }}">
          <h3>{{ block.header }}</h3>
          <p>{{ block.subheader }}</p>
          <a href="#" style="background-color: {{ block.button_color }}">{{ block.button_text }}</a>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

{% style %}
  .custom-slider {
    /* Add your styling for the entire slider section */
  }

  .slider-container {
    /* Add styling for the container of slider blocks */
    display: flex;
    /* Add more styling properties as needed */
  }

  .slider-block {
    /* Styling for each individual slider block */
    margin: 0 10px;
    padding: 20px;
    color: #fff;
    /* Add more styling properties as needed */
  }
{% endstyle %}
